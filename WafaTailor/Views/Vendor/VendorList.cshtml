@model WafaTailor.Models.Vendor

@{
    ViewBag.Title = "VendorList";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

@using (Html.BeginForm("VendorList", "Vendor", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
       <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @* <div class="page-title">Customer List</div>*@
                    </div>
                    @*<ol class="breadcrumb page-breadcrumb pull-right">
                        <li>
                            <i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                               href="/Vendor/VendorDashBoard">Dashboard</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            Vendor&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">Vendor List</li>
                    </ol>*@
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Vendor List</header>
                            <span class="text-danger">
                                @TempData["Vendor"]
                            </span>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body table-responsive">
                            <a href="/Vendor/VendorRegistration" class="btn btn-primary"><i class="fa fa-plus"></i> Add New</a>
                            <table class="table table-striped table-bordered table-hover table-checkable order-column"
                                   style="width: 100%" id="example4">
                                <thead>
                                    <tr>
                                        <th>Sr No. </th>
                                        <th>LoginId </th>
                                        <th>Password</th>
                                        <th>Name </th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Address</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstVendor != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstVendor)
                                            {
                                                <tr class="odd gradeX">
                                                    <td>@i</td>
                                                    <td>@item.LoginId</td>
                                                    <td>@item.Password</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Mobile</td>
                                                    <td>@item.Address</td>
                                                    <td>
                                                        @*<a href="/Customer/CustomerRegistration?CustomerId=@item.CustomerId" class="tblEditBtn">
                                                            <i class="fa fa-pencil"></i>
                                                        </a>*@
                                                        <a href="/Vendor/DeleteVendor?Id=@item.PK_UserId" class="tblDelBtn" onclick="return confirm('Are you sure you want to delete this record ?')">
                                                            <i class="fa fa-trash-o"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- end page container -->
}
<!-- data tables -->

