@model WafaTailor.Models.Vendor

@{
    ViewBag.Title = "VendorRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("VendorRegistration", "Vendor", FormMethod.Post, new { @Id = "form", @enctype = "multipart/Form-data" }))
{
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-body " id="bar-parent2">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>
                                    Vendor Registration
                                    @*<a href="/Employee/EmployeeRegistrationList" class="btn btn-primary pull-right">Back to List</a>*@
                                </h4>
                                <span class="text-danger">
                                    @TempData["Vendor"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">First Name<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name", @onkeypress = "return onlyAlphabets();" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Last Name<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name", @onkeypress = "return onlyAlphabets();" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">DOB<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @placeholder = "DOB",@readonly=true })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Mobile<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Placeholder = "Mobile", @onkeypress = "return isNumberKey(event);",@maxlength="10" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Email<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Placeholder = "Email", })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Pin Code<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.PinCode, new { @class = "form-control", @placeholder = "Pin Code", @onkeypress = "return isNumberKey(event);", @maxlength = "6" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">State<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.State, new { @class = "form-control", @Placeholder = "State", })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">City<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", @Placeholder = "City", })
                                </div>
                            </div>
                        </div>
                      
                        @*<div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Profile Pic<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.ProfilePic, new { @class = "form-control", @Placeholder = "Profile Pic", })
                                </div>
                            </div>
                        </div>*@
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Address<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                     
                    </div>
                    <div>
                        <div class="form-group">
                            <div class="col-sm-9">
                                <input type="submit" class="btn btn-primary" name="Save" value="Submit" onclick="return Validateform()">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script>
    $("#DOB").datepicker({
        dateFormate: 'dd/mm/yy',
        changeYear: 'true',
        changeMonth: 'true'
    })
</script>

<script>
    function Validateform() {
        $("#divload").css({ 'display': '' })
        $(".errortext").removeClass("errortext");

        if ($("#FirstName").val() == "") {
            $("#FirstName").addClass('errortext');
            $("#FirstName").focus();
            return false;
        }

        if ($("#LastName").val() == "") {
            $("#LastName").addClass('errortext');
            $("#LastName").focus();
            return false;
        }
        if ($("#DOB").val() == "") {
            $("#DOB").addClass('errortext');
            $("#DOB").focus();
            return false;
        }

        if ($("#Mobile").val() == "") {
            $("#Mobile").addClass('errortext');
            $("#Mobile").focus();
            return false;
        }
        if ($("#Email").val() == "") {
            $("#Email").addClass('errortext');
            $("#Email").focus();
            return false;
        }

        if ($("#PinCode").val() == "") {
            $("#PinCode").addClass('errortext');
            $("#PinCode").focus();
            return false;
        }

        if ($("#State").val() == "") {
            $("#State").addClass('errortext');
            $("#State").focus();
            return false;
        }

        if ($("#City").val() == "") {
            $("#City").addClass('errortext');
            $("#City").focus();
            return false;
        }

        if ($("#Address").val() == "") {
            $("#Address").addClass('errortext');
            $("#Address").focus();
            return false;
        }
    }


    function isNumberKey(evt) {

        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    

    function onlyAlphabets(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else { return true; }
            if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123))
                return true;
            else
                return false;
        }
        catch (err) {
            alert(err.Description);
        }
    }
</script>
