@model WafaTailor.Models.Vendor

@{
    ViewBag.Title = "VendorRegistration";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

@using (Html.BeginForm("VendorRegistration", "Vendor", FormMethod.Post, new { @Id = "form", @enctype = "multipart/Form-data" }))
{
    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @* <div class="page-title">Customer Registration</div>*@
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li>
                            <i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                               href="/Vendor/VendorDashBoard">Dashboard</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            Registration &nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">Vendor Registration</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="card card-box">
                        <div class="card-head">
                            <header> Vendor Registration</header>
                            <span style="color:red;">@TempData["Vendor"]</span>
                            <a href="/Vendor/VendorList" class="btn btn-primary pull-right mr-10"><i class="fa fa-arrow-left"></i> Back to List</a>
                        </div>
                        <div class="card-body" id="bar-parent">
                            <form>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">First Name<span style="color:red">*</span></label>
                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name", @onkeypress = "return onlyAlphabets();" })
                                         </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">Last Name<span style="color:red">*</span></label>
                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name", @onkeypress = "return onlyAlphabets();" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">DOB<span style="color:red">*</span></label>
                                                @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @placeholder = "DOB", @readonly = true })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">Mobile<span style="color:red">*</span></label>
                                                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Placeholder = "Mobile", @onkeypress = "return isNumberKey(event);", @maxlength = "10" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">Email<span style="color:red">*</span></label>
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Placeholder = "Email", })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">Gender<span style="color:red">*</span></label>
                                                @Html.DropDownListFor(m => m.Gender, new SelectList(ViewBag.Gender, "Value", "Text"), new { @class = "form-control"})
                                        </div>
                                    </div>
                                    @*<div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-4 col-form-label">Pin Code<span style="color:red">*</span></label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(m => m.PinCode, new { @class = "form-control", @placeholder = "Pin Code", @onkeypress = "return isNumberKey(event);", @maxlength = "6" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-4 col-form-label">State<span style="color:red">*</span></label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(m => m.State, new { @class = "form-control", @Placeholder = "State", })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-4 col-form-label">City<span style="color:red">*</span></label>
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(m => m.City, new { @class = "form-control", @Placeholder = "City", })
                                            </div>
                                        </div>
                                    </div>*@
                                    <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="col-form-label">Profile Pic</label>
                                                    <input type="file" name="postedFile" id="postedFile" class="form-control" />
                                             </div>
                                        </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-form-label">Address<span style="color:red">*</span></label>
                                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-primary" name="Save" value="Submit" onclick="return Validateform()">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

