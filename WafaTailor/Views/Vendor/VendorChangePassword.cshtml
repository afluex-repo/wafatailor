@model WafaTailor.Models.Vendor

@{
    ViewBag.Title = "VendorChangePassword";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

@using (Html.BeginForm("VendorChangePassword", "Vendor", FormMethod.Post, new { @Id = "form", @enctype = "multipart/Form-data" }))
{

    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left"></div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li>
                            <i class="fa fa-home"></i>&nbsp;
                            <a class="parent-item" href="/Vendor/VendorDashBoard">Dashboard</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            Change Password &nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">Vendor Change Password</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card card-box">
                        <div class="card-head">
                            <header> Change Password</header>
                            <span style="color:red;">@TempData["VendorChangePassword"]</span>
                            <div class="tools">
                                <a class="box-refresh btn-color fa fa-repeat" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body" id="bar-parent">
                            <form>
                                <div class="row">
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label class="col-form-label">Old Password<span style="color:red">*</span></label>
                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Old Password" })
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label class="col-form-label">New Password<span style="color:red">*</span></label>
                                            @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "New Password" })
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-12">
                                        <div class="form-group">
                                            <label class="col-form-label">Confirm Password<span style="color:red">*</span></label>
                                            @Html.TextBoxFor(m => m.ConfirmNewPassword, new { @class = "form-control", @placeholder = "Confirm New Password", @onchange = "return CheckConfirmPassword();" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary" name="Save" value="Update" onclick="return Validateform()">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script>
    function Validateform() {
        $("#Old").css({ 'display': '' })
        $(".errortext").removeClass("errortext");

        if ($("#Password").val() == "") {
            $("#Password").addClass('errortext');
            $("#Password").focus();
            return false;
        }
        if ($("#NewPassword").val() == "") {
            $("#NewPassword").addClass('errortext');
            $("#NewPassword").focus();
            return false;
        }
        if ($("#ConfirmNewPassword").val() == "") {
            $("#ConfirmNewPassword").addClass('errortext');
            $("#ConfirmNewPassword").focus();
            return false;
        }
    }
    function CheckConfirmPassword() {
        $(".errortext").removeClass("errortext");
        if ($("#NewPassword").val() != $("#ConfirmNewPassword").val()) {
            alert("New Password and Confirm password should be same !");
            $("#NewPassword").addClass("errortext");
            $("#ConfirmNewPassword").addClass("errortext");
            $("#NewPassword").val("");
            $("#ConfirmNewPassword").val("");
            $("#NewPassword").focus();
            $("#ConfirmNewPassword").focus();
        }

    }
</script>


