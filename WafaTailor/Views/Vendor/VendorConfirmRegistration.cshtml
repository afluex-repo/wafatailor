@model WafaTailor.Models.Vendor

@{
    ViewBag.Title = "VendorConfirmRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content-wrapper mt-5">
    <div class="page-content">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12 col-12 offset-md-3">
                <div class="white-box border-gray mt-5 pb-4">
                    <div class="user-bg">
                        <div class="overlay-box">
                            <div class="user-content">
                                <h2 class="text-uppercase font-600 text-white">Congratulations !!</h2>
                                <a href="javascript:void(0)"><img alt="img" class="thumb-lg img-circle" style="width:25%;" src="~/Assets/Images/user.png"></a>
                                <h5 class="text-white pt-2">Vendor details has been saved successfully !</h5>
                            </div>
                        </div>
                    </div>
                    <div class="user-btm-box">
                        <div class="col-md-12  m-b-0 text-center">
                            <div class="stat-item">
                                <p>
                                    User Name- @Session["Name"], <br /> Login Id- @Session["VendorLoginId"]
                                    <br />  Password- @Session["VendorPassword"]
                                </p>
                                <a href="/Vendor/VendorRegistration" class="btn btn-circle btn-primary m-b-10">
                                    <i class="fa fa-arrow-left"></i> Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







