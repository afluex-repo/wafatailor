@model WafaTailor.Models.Employee

@{
    ViewBag.Title = "EmployeeBillList";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">
@using (Html.BeginForm("EmployeeBillList", "Employee", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
   <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @*  <div class="page-title">Bill List</div>*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Bill List</header>
                            <span class="text-danger">
                                @TempData["EmployeeBillList"]
                            </span>
                            <a href="/Employee/EmployeeBillEntry" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i> Back to Bill Entry</a>

                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label>Mobile Number</label>
                                        @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", @Placeholder = "Mobile Number", @onkeypress = "return isNumberKey(event);", @Maxlength = "8", @Minlength = "8" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label> From Date</label>
                                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "DD/MM/YYYY", @readonly = "true" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label> To Date</label>
                                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "DD/MM/YYYY", @readonly = "true" })
                                    </div>
                                </div>
                         
                                <div class="col-lg-2 col-md-3">
                                    <div class="form-group">
                                        <input class="btn btn-success pull-left mt-4" type="submit" value="Search" id="btnSearch" name="btnSearch" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered" id="dataTable">
                                <thead>
                                    <tr>
                                        @*<th>Sr No.</th>*@
                                        <th>Customer</th>
                                        <th>Mobile</th>
                                        <th>Generated Piece</th>
                                        <th>Delivered Piece</th>
                                        <th>Remaining Piece</th>
                                        <th>Generated Price</th>
                                        <th>Paid Amount</th>
                                        <th>Remaining Balance</th>
                                        <th>Bill No</th>
                                        <th>Bill Date</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstList != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstList)
                                            {
                                                <tr>
                                                    @*<td>@i</td>*@
                                                    <td>@item.Name</td>
                                                    <td>@item.ContactNo</td>
                                                    <td>@item.GeneratedPiece</td>
                                                    <td>@item.DeliveredPiece</td>
                                                    <td>@item.RemainingPiece</td>
                                                    <td>@item.GeneratedAmount</td>
                                                    <td>@item.Advance</td>
                                                    <td>@item.Balance</td>
                                                    <td>@item.BillNo</td>
                                                    <td>@item.BillDate</td>
                                                    <td>@item.Status</td>
                                                    <td>
                                                        <a href="/Employee/EmployeeBillEntry?BillId=@item.BillId&&PaymentId=@item.Pk_BillPaymentId" class="tblDelBtn btn-sm">
                                                            <i class="btn btn-primary" title="Print">Edit</i>
                                                        </a>
                                                        @if (item.Balance > 0)
                                                        {
                                                            <a target="_blank" href="/Employee/BillPayment?BillId=@item.BillId&&PaymentId=@item.Pk_BillPaymentId" class="tblDelBtn btn-sm">
                                                                <i class="btn btn-secoundry" title="Paid Bill">Paid Bill</i>
                                                            </a>
                                                        }
                                                        <a href="/Employee/DeleteEmployeeBillEntry?PaymentId=@item.Pk_BillPaymentId" class="tblDelBtn btn-sm" onclick="return confirm('Are You Sure You Want To Delete This Bill Payment Details ?')">
                                                            <i class="btn btn-danger">Delete</i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                    }

                                </tbody>
                                @*<tfoot>
                                    <tr>
                                        <th></th>
                                        <th>Total</th>
                                        <th>@ViewBag.NoOfPiece</th>
                                        <th>@ViewBag.DeliveredPiece</th>
                                        <th>@ViewBag.RemainingPiece</th>
                                        <th>@ViewBag.OriginalPrice </th>
                                        <th>@ViewBag.Advance</th>
                                        <th>@ViewBag.Balance </th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </tfoot>*@
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script src="~/plugins/flatpickr/flatpickr.js"></script>
<script src="~/plugins/flatpickr/custom-flatpickr.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script>
    var f3 = flatpickr(document.getElementById('FromDate'),
        {
            dateFormat: "d/m/Y",
        });
    var f3 = flatpickr(document.getElementById('ToDate'),
        {
            dateFormat: "d/m/Y",
        });

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

</script>



