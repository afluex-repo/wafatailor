@model WafaTailor.Models.Employee

@{
    ViewBag.Title = "SalaryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("SalaryList", "Employee", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
   <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-head">
                                <header>Salary List</header>
                                <span class="text-danger">
                                    @TempData["Salary"]
                                </span>
                                <a href="/Employee/EmployeeSalaryManagement" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i> Back to Salary</a>
                                <div class="tools">
                                    <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                    <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                                </div>
                            </div>

                            <div class="card-body table-responsive">

                                <table class="table table-striped table-bordered table-hover table-checkable order-column"
                                       style="width: 100%" id="example4">
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>Employee</th>
                                            <th>Salary</th>
                                            <th>Total Advance</th>
                                            <th>Remaining Salary</th>
                                            @*<th>Date</th>
                                            <th>Remark</th>*@
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                            @if (Model != null)
                                            {
                                                if (Model.lstSalary != null)
                                                {
                                                    int i = 1;
                                                    foreach (var item in Model.lstSalary)
                                                    {
                                                        <tr>
                                                            <td>@i</td>
                                                            <td>@item.EmployeeName</td>
                                                            <td>@item.Salary</td>
                                                            <td>@item.DrAmount</td>
                                                            <td>@item.RemainingSalary</td>
                                                            <td>
                                                        <a href="/Employee/SalaryLedger?SalaryId=@item.EmployeeId">
                                                             <i class="btn btn-danger">Ledger</i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        i = i + 1;
                                                    }
                                                }
                                            }
                                        </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


