@model WafaTailor.Models.Employee

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}


@using (Html.BeginForm("Profile", "Employee", FormMethod.Post, new { @Id = "form", @enctype = "multipart/Form-data" }))
{
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-body " id="bar-parent2">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>
                                    Profile
                                </h4>
                                <span class="text-danger">
                                    @TempData["Profile"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- BEGIN PROFILE SIDEBAR -->
                            <div class="profile-sidebar">
                                <div class="card">
                                    <div class="card-body no-padding height-10">
                                        <div class="row">
                                            <div class="profile-userpic">
                                                <img src="@ViewBag.Profile" class="img-responsive" alt="">
                                            </div>
                                        </div>
                                        <div class="profile-usertitle m-b-10">
                                            <div class="profile-usertitle-name">@ViewBag.EmployeeName</div>
                                        </div>
                                        <ul class="list-group list-group-unbordered">
                                            <li class="list-group-item">
                                                <b>Name</b> <a class="pull-right">@ViewBag.EmployeeName</a>
                                            </li>
                                            <li class="list-group-item">
                                                <b>Email</b> <a class="pull-right">@ViewBag.Emailid</a>
                                            </li>
                                            <li class="list-group-item">
                                                <b>Gender</b> <a class="pull-right">@ViewBag.Gender</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- END BEGIN PROFILE SIDEBAR -->
                            <!-- BEGIN PROFILE CONTENT -->
                            <div class="profile-content">
                                <div class="row">
                                    <div class="card">
                                        @*<div class="white-box">*@
                                        <div class="card-body no-padding height-9">
                                            <ul class="list-group list-group-unbordered">
                                                <li class="list-group-item">
                                                    <b>Shop Name</b> <a class="pull-right">@ViewBag.ShopName</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Name</b> <a class="pull-right">@ViewBag.EmployeeName</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Address</b> <a class="pull-right">@ViewBag.EmployeeAddress</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Date Of Birth</b> <a class="pull-right">@ViewBag.DOB</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Email</b> <a class="pull-right">@ViewBag.Emailid</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Gender</b> <a class="pull-right">@ViewBag.Gender</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>LoginId</b> <a class="pull-right">@ViewBag.LoginId</a>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Password</b> <a class="pull-right">@ViewBag.Password</a>
                                                </li>
                                            </ul>
                                        </div>
                                        @*</div>*@
                                    </div>
                                </div>
                            </div>
                            <!-- END PROFILE CONTENT -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


