@model WafaTailor.Models.Employee

@{
    ViewBag.Title = "EmployeeChangePassword";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

@using (Html.BeginForm("EmployeeChangePassword", "Employee", FormMethod.Post, new { @Id = "form", @enctype = "multipart/Form-data" }))
{
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-body " id="bar-parent2">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>
                                    Change Password
                                </h4>
                                <span class="text-danger">
                                        @TempData["EmployeeChangePassword"]
                                    </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Old Password<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Old Password" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">New Password<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "New Password" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Confirm Password<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.ConfirmNewPassword, new { @class = "form-control", @placeholder = "Confirm New Password", @onchange = "return CheckConfirmPassword();" })
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="form-group">
                                <div class="col-sm-9">
                                    <input type="submit" class="btn btn-primary" name="Save" value="Update" onclick="return Validateform()">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script>
    function Validateform()
    {
        $("#Old").css({ 'display': '' })
        $(".errortext").removeClass("errortext");

        if ($("#Password").val() == "") {
            $("#Password").addClass('errortext');
            $("#Password").focus();
            return false;
        }
        if ($("#NewPassword").val() == "") {
            $("#NewPassword").addClass('errortext');
            $("#NewPassword").focus();
            return false;
        }
        if ($("#ConfirmNewPassword").val() == "") {
            $("#ConfirmNewPassword").addClass('errortext');
            $("#ConfirmNewPassword").focus();
            return false;
        }
    }
    function CheckConfirmPassword() {
        $(".errortext").removeClass("errortext");
        if ($("#NewPassword").val() != $("#ConfirmNewPassword").val()) {
            alert("New Password and Confirm password should be same !");
            $("#NewPassword").addClass("errortext");
            $("#ConfirmNewPassword").addClass("errortext");
            $("#NewPassword").val("");
            $("#ConfirmNewPassword").val("");
            $("#NewPassword").focus();
            $("#ConfirmNewPassword").focus();
        }

    }
</script>


