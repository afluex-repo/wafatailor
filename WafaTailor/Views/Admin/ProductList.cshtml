@model WafaTailor.Models.Admin

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("ProductList", "Admin", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
   <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @*  <div class="page-title">Bill List</div>*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Product List</header>
                            <span class="text-danger">
                                @TempData["msg"]
                            </span>
                            <a href="/Admin/ProductMaster" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i>Add New</a>
                        </div>
                      
                        <div class="card-body table-responsive">
                            <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                <thead>
                                    <tr>
                                        <th>Sr.No.</th>
                                        <th>Product Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstProduct != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstProduct)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.ProductName</td>
                                                    <td>
                                                        <a href="/Admin/DeleteProduct?Id=@item.Pk_ProductId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product ?');">Delete</a>

                                                        <a href="/Admin/ProductMaster?Id=@item.Pk_ProductId" class="btn btn-primary btn-sm">Edit</a>

                                                    </td>
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
