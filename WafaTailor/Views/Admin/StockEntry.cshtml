@model WafaTailor.Models.Admin

@{
    ViewBag.Title = "StockEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("StockEntry", "Admin", FormMethod.Post, new { @Id = "form", @enctype = "multipart/Form-data" }))
{
    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                    </div>
                    @*<ol class="breadcrumb page-breadcrumb pull-right">
                            <li>
                                <i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                                   href="/Admin/AdminDashBoard">Dashboard</a>&nbsp;<i class="fa fa-angle-right"></i>
                            </li>
                            <li>
                                Change Password &nbsp;<i class="fa fa-angle-right"></i>
                            </li>
                            <li class="active"> Change Password</li>
                        </ol>*@
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="card card-box">
                        <div class="card-head">
                            <header>Stock Entry</header>
                            <span style="color:red;">@TempData["StockEntry"]</span>
                            <a href="/Admin/StockEntryList" class="btn btn-primary pull-right mr-10 mt-1 mb-1"><i class="fa fa-arrow-left"></i> Back to List</a>
                        </div>
                        <div class="card-body" id="bar-parent">
                            <form>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">Product Name<span style="color:red">*</span></label>
                                            @Html.DropDownListFor(m => m.Fk_ProductId, new SelectList(ViewBag.ddlproduct, "Value", "Text"), new { @class = "form-control", @placeholder = "Product Name" })
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">No Of Piece<span style="color:red">*</span></label>
                                            @Html.TextBoxFor(m => m.NoOfPiece, new { @class = "form-control", @placeholder = "No Of Piece", @onkeypress = "return isNumberKey(event);" })
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">Amount/Piece<span style="color:red">*</span></label>
                                            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @placeholder = "Amount/Piece", @onkeypress = "return isNumberOrDecimal(event);" })
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-form-label">Shop Name<span style="color:red">*</span></label>
                                            @Html.DropDownListFor(m => m.Fk_ShopId, new SelectList(ViewBag.ddlShop, "Value", "Text"), new { @class = "form-control", @placeholder = "Product Name" })
                                        </div>
                                    </div>
                                    <div>
                                        <div class="form-group">
                                            @if (Model.PK_StockId == null)
                                            {
                                                <input type="submit" class="btn btn-primary" id="btnSave" name="btnSave" value="Save" onclick="return Validateform()">
                                            }
                                            else
                                            {
                                                <input type="hidden" id="PK_StockId" name="PK_StockId" value="@Model.PK_StockId" />
                                                <input type="submit" class="btn btn-primary" id="btnUpdate" name="btnUpdate" value="Update" onclick="return Validateform()">
                                            }


                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script>

    //var PK_StockId = $("#PK_StockId").val();
    //if (PK_StockId != 0) {
    //    $("#btnSave").val('Update');
    //}


    function Validateform() {
        $("#Old").css({ 'display': '' })
        $(".errortext").removeClass("errortext");

        if ($("#Fk_ProductId").val() == "0") {
            $("#Fk_ProductId").addClass('errortext');
            $("#Fk_ProductId").focus();
            return false;
        }
        if ($("#NoOfPiece").val() == "") {
            $("#NoOfPiece").addClass('errortext');
            $("#NoOfPiece").focus();
            return false;
        }
        if ($("#Amount").val() == "") {
            $("#Amount").addClass('errortext');
            $("#Amount").focus();
            return false;
        }
        if ($("#Fk_ShopId").val() == "0") {
            $("#Fk_ShopId").addClass('errortext');
            $("#Fk_ShopId").focus();
            return false;
        }
    }

    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }


    function isNumberKey(evt) {

        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }


</script>

