@model WafaTailor.Models.Admin

@{
    ViewBag.Title = "StockEntryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("StockEntryList", "Admin", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
   <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @*  <div class="page-title">Bill List</div>*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Stock Entry List</header>
                            <span class="text-danger">
                                @TempData["StockEntry"]
                            </span>
                            <a href="/Admin/StockEntry" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i>Add New</a>
                        </div>
                        @*<div class="card-body">
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label class="col-form-label">Product Name</label>
                                            @Html.DropDownListFor(m => m.Fk_ProductId, new SelectList(ViewBag.ddlproduct, "Value", "Text"), new { @class = "form-control", @placeholder = "Product Name" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label class="col-form-label">Shop Name</label>
                                        @Html.DropDownListFor(m => m.Fk_ShopId, new SelectList(ViewBag.ddlShop, "Value", "Text"), new { @class = "form-control", @placeholder = "Product Name" })
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-3 mt-4">
                                    <div class="form-group">
                                        <input class="btn btn-success pull-left mt-3" type="submit" value="Search" id="btnSearch" name="btnSearch" />
                                    </div>
                                </div>
                            </div>
                        </div>*@

                        <div class="card-body table-responsive">
                            <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                <thead>
                                    <tr>
                                        <th>Sr.No.</th>
                                        <th>Product Name</th>
                                        <th>No Of Piece</th>
                                        <th>Amount/Piece</th>
                                        <th>Shop Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstStockEntry != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstStockEntry)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.ProductName</td>
                                                    <td>@item.NoOfPiece</td>
                                                    <td>@item.Amount</td>
                                                    <td>@item.ShopName</td>
                                                    <td>
                                                        <a href="/Admin/DeleteStockEntry?Id=@item.PK_StockId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this stock details ?');">Delete</a>

                                                        <a href="/Admin/StockEntry?Id=@item.PK_StockId" class="btn btn-primary btn-sm">Edit</a>

                                                    </td>
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

