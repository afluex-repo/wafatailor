@model WafaTailor.Models.Admin

@{
    ViewBag.Title = "OrderRefundList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("OrderRefundList", "Admin", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
   <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @*  <div class="page-title">Bill List</div>*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Order Refund List</header>
                            <span class="text-danger">
                                @TempData["Order"]
                            </span>
                            <a href="/Admin/OrderRefund" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i> Back TO Refund Order</a>
                        </div>

                        <div class="card-body">
                                <table id="dataTable" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Sr.No.</th>
                                            <th>Bill Number</th>
                                            <th>No Of Piece</th>
                                            <th>Contact Number</th>
                                            <th>Amount</th>
                                            @*<th>Refund Date</th>*@
                                            <th>Action</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstList != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstList)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.BillNo</td>
                                                        <td>@item.NoOfPiece</td>
                                                        <td>@item.Mobile</td>
                                                        <td>@item.Balance</td>
                                                        @*<td>@item.RefundDate</td>*@
                                                        <td>
                                                            <a target="_blank" href="/Admin/PrintOrderRefund?RefundId=@item.RefundId" class="tblDelBtn">
                                                                <i class="btn btn-primary" title="Print">Print</i>
                                                            </a>

                                                        </td>
                                                        <td></td>
                                                    </tr>
                                                    i = i + 1;
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
}


