@model WafaTailor.Models.SaleOrder

@{
    ViewBag.Title = "PrintSaleOrder";
    Layout = null;
}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style type="text/css">
        p, span, th, td, h5, h4, li, div {
            font-family: 'Poppins', sans-serif;
            font-size: 14px;
        }

        p {
            font-size: 14px;
        }

        body {
            background: #f2f2f2;
        }

        .box-shadow {
            box-shadow: 1px 1px 3px gray;
        }
    </style>
    <div class="container mb-5 mt-2">
        <div class="card box-shadow">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h3>Invoice</h3>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <img src="~/assets/Images/logo.png" alt="logo" class="mt-4" style="width: 35%">
                    </div>
                    <div class="col-sm-6 text-right">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-4">

                    <div class="col-sm-6">
                        <h6 class="font-weight-bold">Wafa Tailor</h6>
                        <div>
                        </div>
                        <div>
                            <p>
                                <b>Address:</b> 2nd Floor Arjun Tower Near Ola Office, <br /> Vibhuti Khand, Lucknow, Uttar Pradesh 226010 <br />
                                <b>Email :</b> wafatailor@gmail.com<br />
                                <b>Phone No.</b> 9876543210
                            </p>
                        </div>
                    </div>

                    <div class="col-sm-6 text-right">
                        <h6 class="mb-3">Invoice To</h6>
                        <div>
                            <strong>@ViewBag.CustomerName</strong>
                        </div>
                        <div>Address: @ViewBag.CustomerAddress </div>
                        <div>Email: @ViewBag.Email</div>
                        <div>Phone: @ViewBag.CustomerMobile</div>
                    </div>
                </div>
                <div class="table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Order Date</th>
                                <th>Delivery Date</th>
                                <th>Description</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstsaleorder != null)
                                {
                                    var i = 1; foreach (var item in Model.lstsaleorder)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.OrderDate</td>
                                            <td>@item.DeliveryDate</td>
                                            <td>@item.Description</td>
                                            <td>@item.Amount</td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-sm-5">
                    </div>
                    <div class="col-lg-4 col-sm-5 ml-auto">
                        <table class="table table-clear">
                            <tbody>
                                @*<tr>
                                    <td class="left">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td class="right">$8.497,00</td>
                                </tr>
                                <tr>
                                    <td class="left">
                                        <strong>Discount (20%)</strong>
                                    </td>
                                    <td class="right">$1,699,40</td>
                                </tr>*@
                                <tr>
                                    <td class="left">
                                        <strong>Total :</strong>
                                    </td>
                                    <td class="right">
                                        <strong>@ViewBag.Amount</strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <h5>Terms and Conditions :-</h5>
                        <ol>
                            <li>Taxes will be charge 18% extra as per GST applicable.</li>
                            <li>Payments will be 100% advance in BTL branding.</li>
                        </ol>
                    </div>
                    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
                    <div class="col-sm-12 text-right">
                        <h5>Authorized Signature</h5>
                        <p>..............................................</p>
                    </div>
                    <br /><br /><br /><br /><br />
                    <div class="col-sm-12 text-center">
                        <p>Thank you for your business.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>