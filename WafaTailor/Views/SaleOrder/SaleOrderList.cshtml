@model WafaTailor.Models.SaleOrder

@{
    ViewBag.Title = "SaleOrderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaleOrderList", "SaleOrder", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
      <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @*<div class="page-title">Shop List</div>*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Sale Order List</header>
                            <span class="text-danger">
                                @TempData["SaleOrder"]
                            </span>
                            <a href="/SaleOrder/SaleOrder" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i> Back to Sale Order</a>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label>Shop</label>
                                        @Html.TextBoxFor(m => m.ShopLoginId, new { @class = "form-control", @placeholder = "Shop LoginId" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label>Customer LoginId</label>
                                        @Html.TextBoxFor(m => m.LoginId, new  { @class = "form-control", @placeholder = "Customer LoginId" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label>Mobile No</label>
                                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @placeholder = "Mobile Number" })
                                    </div>
                                </div>

                                @*<div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label> From Date</label>
                                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "DD/MM/YYYY" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        <label> To Date</label>
                                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "DD/MM/YYYY" })
                                    </div>
                                </div>*@
                                <div class="col-lg-2 col-md-3 mt-4">
                                    <div class="form-group">
                                        <input class="btn btn-success pull-left" type="submit" value="Search" id="btnSearch" name="btnSearch" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body table-responsive">
                            
                            <table class="table table-striped table-bordered table-hover table-checkable order-column"
                                   style="width: 100%">
                                <thead>
                                    <tr>       
                                        <th>Sr No.</th>
                                        <th> Shop Name</th>
                                        <th>Bill No</th>
                                        <th> Sales Order No.</th>
                                        <th>Customer Name</th>
                                        <th>Mobile</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                             <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstRegistration != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstRegistration)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.ShopName</td>
                                                    <td>@item.BillNo</td>
                                                    <td>@item.SalesOrderNo</td>
                                                    <td>@item.CustomerName</td>
                                                    <td>@item.Mobile</td>
                                                    <td>
                                                        @*<a href="/SaleOrder/DeleteSaleOrder?SaleOrderId=@item.SaleOrderId" class="tblDelBtn" onclick="return confirm('Are You Sure You Want To Delete This Sale Order Details?')">
                                                            <i class="fa fa-trash-o" title="Delete"></i>
                                                        </a>*@
                                                        @*<a target="_blank" href="/SaleOrder/PrintSaleOrder?SaleOrderId=@item.SaleOrderId" class="tblDelBtn">
                                                            <i class="fa  fa-print" title="Print"></i>
                                                        </a>*@
                                                        <a href="/SaleOrder/UpdateSaleOrder?SaleOrderId=@item.SaleOrderId" class="tblDelBtn">
                                                            <i class="btn btn-primary" title="Edit">Edit</i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   <!-- end page container -->
}

