@model WafaTailor.Models.SaleOrder

@{
    ViewBag.Title = "SaleOrderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaleOrderList", "SaleOrder", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
      <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @*<div class="page-title">Shop List</div>*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Sale Order List</header>
                            <span class="text-danger">
                                @TempData["SaleOrder"]
                            </span>
                            <a href="/SaleOrder/SaleOrder" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i> Back to Sale Order</a>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body table-responsive">
                            
                            <table class="table table-striped table-bordered table-hover table-checkable order-column"
                                   style="width: 100%" id="example4">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th> Amount</th>
                                        <th>Order Date</th>
                                        <th> Delivery Date</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                             <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstRegistration != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstRegistration)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.Amount</td>
                                                    <td>@item.OrderDate</td>
                                                    <td>@item.DeliveryDate</td>
                                                    <td>@item.Description</td>
                                                    <td>
                                                        <a href="/SaleOrder/DeleteSaleOrder?SaleOrderId=@item.SaleOrderId" class="tblDelBtn" onclick="return confirm('Are You Sure You Want To Delete This Sale Order Details?')">
                                                            <i class="fa fa-trash-o"></i>
                                                        </a>
                                                        <a href="/SaleOrder/PrintSaleOrder?SaleOrderId=@item.SaleOrderId" class="tblDelBtn">
                                                            <i class="fa  fa-print"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   <!-- end page container -->
}

