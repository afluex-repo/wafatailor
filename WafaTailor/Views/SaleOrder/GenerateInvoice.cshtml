@model WafaTailor.Models.SaleOrder

@{
    ViewBag.Title = "GenerateInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form action="/SaleOrder/SaleOrder" enctype="multipart/form-data" id="signupForm" method="post">
    <div class="page-content mt-5">
        <div class="card">
            <div class="card-body">
                <div class="card-head">
                    <header> Sale Order</header>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item active" aria-current="page">Generate Invoice No</li>
                            </ol>
                        </nav>
                    </div>

                </div>
                <hr />
                @if (@TempData["InvoiceNo"] != null)
            {
                    <div class="alert border-0 alert-dismissible fade show py-2" style="display: @TempData["Class"];">
                        <div class="d-flex align-items-center">
                            <div class="font-35 text-white">
                                <i class="bx bxs-check-circle" style="color:green"></i>
                            </div>
                            <div class="ms-3">
                                <div class="text-white">@TempData["InvoiceNo"]!</div>
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                }
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="col-md-6 mt-2">
                            <label class="index-1">Invoice No </label>
                            <input type="text" class="form-control" id="InvoiceNo" name="InvoiceNo" readonly="true" Placeholder="Invoice No"/>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group row">
                                <div class="col-md-9 mt-3">
                                    <input type="submit" value="Generate Invoice No" class="btn btn-primary px-5" name="btnGenerateInvoiceNo" onclick="return generateInvoiceNo()" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row g-3">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover table-checkable order-column"
                                   style="width: 100%" id="example4">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>Invoice No</th>
                                        <th>Invoice Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <button type="button" class="btn btn-primary">
                                                <a href="/SaleOrder/PrintSaleOrder?SaleOrderId=1" target="_blank"><i class="fa fa-print me-0"  style="font-size:16px;color:white"></i></a>
                                            </button>
                                        </td>
                                        <td>WFT/2022-23/0001</td>
                                        <td>02/07/2022</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <button type="button" class="btn btn-primary">
                                                <a href="/SaleOrder/PrintSaleOrder?SaleOrderId=1" target="_blank"><i class="fa fa-pencil-alt me-0" title="Generate Bill" style="font-size:16px;color:white"></i></a>
                                            </button>
                                        </td>
                                        <td>WFT/2022-23/0002</td>
                                        <td>04/07/2022</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
$(document).ready(function () {
    $("#InvoiceNo").val();
$("#divload").css({ display: "none" });
});

function generateInvoiceNo() {
 var result = confirm("Are you sure you want to generate New Invoice Number ?");
 if (result == false) {
    return false;
}
$("#divload").css({ display: "" });
}
</script>




