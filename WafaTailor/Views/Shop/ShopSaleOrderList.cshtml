@model WafaTailor.Models.Shop

@{
    ViewBag.Title = "ShopSaleOrderList";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

@using (Html.BeginForm("ShopSaleOrderList", "Shop", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
      <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @*<div class="page-title">Shop List</div>*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Sale Order List</header>
                            <span class="text-danger">
                                @TempData["ShopSaleOrder"]
                            </span>
                            <a href="/Shop/ShopSaleOrder" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i> Back to Shop SO</a>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>
                        </div>
                        <div class="card-body table-responsive">

                            <table class="table table-striped table-bordered table-hover table-checkable order-column"
                                   style="width: 100%" id="example4">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th> Customer Name</th>
                                        <th>Contact No</th>
                                        <th> Bill No</th>
                                        <th>Sales Order No</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstShopRegistration != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstShopRegistration)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.customerName</td>
                                                    <td>@item.Mobile</td>
                                                    <td>@item.BillNo</td>
                                                    <td>@item.SalesOrderNo</td>
                                                    <td>
                                                        @*<a href="/Shop/DeleteShopSaleOrder?SaleOrderId=@item.SaleOrderId" class="tblDelBtn" onclick="return confirm('Are You Sure You Want To Delete This Shop Sale Order Details?')">
        <i class="fa fa-trash-o" title="Delete"></i>
    </a>*@
                                                        <a href="/Shop/PrintShopSaleOrder?SaleOrderId=@item.SaleOrderId" class="tblDelBtn">
                                                            <i class="fa  fa-print" title="Print"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   <!-- end page container -->
}



