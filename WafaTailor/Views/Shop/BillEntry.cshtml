@model WafaTailor.Models.Shop

@{
    ViewBag.Title = "BillEntry";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}


<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">
@using (Html.BeginForm("BillEntry", "Shop", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
        <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                        @*<div class="page-title">Customer Registration</div>*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="card card-box">
                        <div class="card-head">
                            <header>Bill Entry</header>
                            <span style="color:red;">@TempData["BillEntry"]</span>
                            <a href="/Shop/BillList" class="btn btn-primary pull-right mr-10 mb-1 mt-1"><i class="fa fa-arrow-left"></i> Back to List</a>
                        </div>
                        <div class="card-body" id="bar-parent">
                            <div class="row">
                                @*<div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Shop<span style="color:red">*</span></label>
                                        @Html.DropDownListFor(m => m.ShopId, new SelectList(ViewBag.ddlShop, "Value", "Text"), new { @class = "form-control", @placeholder = "Shop Name" })
                                    </div>
                                </div>*@
                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Bill Date<span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.BillDate, new { @class = "form-control", @placeholder = "Bill Date", @readonly = "true" })
                                    </div>
                                </div>
                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Customer<span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Customer Name", @onchange = "return changeCustomer();" })
                                        @Html.HiddenFor(m => m.Pk_UserId)
                                    </div>
                                </div>
                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Mobile No<span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Placeholder = "Mobile No", @onkeypress = "return isNumberOrDecimal(event);", @maxlength = "8", @Minlength = "8" })

                                    </div>
                                </div>
                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormPassword">Bill No <span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.BillNo, new { @class = "form-control", @Placeholder = " BillNo", })
                                    </div>
                                </div>


                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Total Piece <span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.NoOfPiece, new { @class = "form-control", @Placeholder = " No Of Piece", @onkeypress = "return isNumberOrDecimal(event);", onInput = "return calculatefinalamount()" })
                                    </div>
                                </div>

                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Total Amount  <span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.OriginalPrice, new { @class = "form-control", @placeholder = "Total Amount", @onkeypress = "return isNumberOrDecimal(event);", onInput = "return calculatefinalamount()" })
                                    </div>
                                </div>

                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Paid Amount<span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.Advance, new { @class = "form-control", @placeholder = "Paid Amount", @onkeypress = "return isNumberOrDecimal(event);", onInput = "return calculatefinalamount()" })
                                    </div>
                                </div>

                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail"> Delivered Piece <span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.DeliveredPiece, new { @class = "form-control", @Placeholder = "Delivered Piece", @onkeypress = "return isNumberOrDecimal(event);", onchange = "return calculateremainingPiece()" })
                                    </div>
                                </div>

                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail"> Remaining Piece <span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.RemainingPiece, new { @class = "form-control", @Placeholder = "Remaining Piece", @onkeypress = "return isNumberOrDecimal(event);", onInput = "return calculateremainingPiece()" })
                                    </div>
                                </div>

                              
                                <div class="form-group col-sm-3" style="display: none;">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Final Price<span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.FinalPrice, new { @class = "form-control", @placeholder = "Final Price", @Readonly = "true" })
                                    </div>
                                </div>
                             
                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Remaining Balance<span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.RemainningBalance, new { @class = "form-control", @placeholder = "Remaining Balance", @Readonly = "true" })
                                    </div>
                                </div>

                             

                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Status<span style="color:red">*</span></label>
                                        @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.BindStatus, "Value", "Text"), new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group col-sm-4 mt-4">
                                    @Html.HiddenFor(m => m.BillId)
                                    @Html.HiddenFor(m => m.Pk_BillPaymentId)
                                    @if (Model.BillId != null && Model.Pk_BillPaymentId != null)
                                    {
                                        <input type="submit" class="btn btn-primary" id="UpdateBill" name="UpdateBill" value="Update">
                                    }
                                    else
                                    {
                                    <input type="submit" class="btn btn-primary" id="Save" name="Save" value="Submit" onclick="return Validateform()">
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

