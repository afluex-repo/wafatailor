@model WafaTailor.Models.Customer

@{
    ViewBag.Title = "CustomerRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CustomerRegistration", "Customer", FormMethod.Post, new { @Id = "form", @enctype = "multipart/Form-data" }))
{
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-box">
                <div class="card-body " id="bar-parent2">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>
                                    Customer Registration
                                    <a href="/Customer/CustomerRegistrationList" class="btn btn-primary pull-right">Back to List</a>
                                </h4>
                                <span class="text-danger">
                                        @TempData["Employee"]
                                    </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Customer Name<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @placeholder = " Customer Name" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Contact No<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", @placeholder = "Contact Number" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Email-Id<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Emailid, new { @class = "form-control", @placeholder = "Email-Id" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Date Of Birth<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @readonly = "true" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Gender<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
        {
                            new SelectListItem() {Text = "Male"},
                            new SelectListItem() {Text = "Female"}
        }, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 col-form-label">Address<span style="color:red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.CustomerAddress, new { @class = "form-control", @placeholder = "Customer Address" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mt-5">
                            <div class="form-group">
                                <div class="col-sm-9">
                                    <input type="submit" class="btn btn-primary" name="Save" value="Submit" onclick="return Validateform()">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script>
    $("#DOB").datepicker({
        dateFormate: 'dd/mm/yy',
        changeYear: 'true',
        changeMonth: 'true'
    })
</script>

<script>
    function Validateform()
    {
        $("#divload").css({ 'display': '' })
        $(".errortext").removeClass("errortext");

        if ($("#ShopName").val() == "") {
            $("#ShopName").addClass('errortext');
            $("#ShopName").focus();
            return false;
        }

        if ($("#EmployeeName").val() == "") {
            $("#EmployeeName").addClass('errortext');
            $("#EmployeeName").focus();
            return false;
        }
        if ($("#EmployeeAddress").val() == "") {
            $("#EmployeeAddress").addClass('errortext');
            $("#EmployeeAddress").focus();
            return false;
        }

        if ($("#DOB").val() == "") {
            $("#DOB").addClass('errortext');
            $("#DOB").focus();
            return false;
        }
        if ($("#ContactNo").val() == "") {
            $("#ContactNo").addClass('errortext');
            $("#ContactNo").focus();
            return false;
        }

        if ($("#Emailid").val() == "") {
            $("#Emailid").addClass('errortext');
            $("#Emailid").focus();
            return false;
        }
        //if ($("#Gender").val() == "") {
        //    $("#Gender").addClass('errortext');
        //    $("#Gender").focus();
        //    return false;
        //}

    }
</script>

