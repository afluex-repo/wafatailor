
@{
    ViewBag.Title = "CustomerConfirmRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <!-- start page content -->
    <div class="page-content-wrapper mt-5">
        <div class="page-content">
            <div class="row">
                @*<div class="col-md-3"></div>*@
                <div class="col-lg-6 col-md-12 col-sm-12 col-12 offset-md-3">
                    <div class="white-box border-gray mt-5 pb-4">
                        <div class="user-bg">
                            <div class="overlay-box">
                                <div class="user-content">
