@model WafaTailor.Models.Master

@{
    ViewBag.Title = "BillReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("BillReport", "Master", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
{
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-12">
                    <div class="card">
                        <div class="card-head">
                            <header>Bill Report</header>
                            <span class="text-danger">
                                @TempData["Report"]
                            </span><a href="/Master/ShopMasterList" class="btn btn-primary pull-right"><i class="fa fa-arrow-left"></i> Back to List</a>
                            <div class="tools">
                                <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                            </div>

                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-striped table-bordered table-hover table-checkable order-column"
                                   style="width: 100%" id="example4">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Sales Order No.</th>
                                        <th>Bill No.</th>
                                        <th>Piece Name</th>
                                        <th>No. Of Piece</th>
                                        <th>Original Price</th>
                                        <th>Discount</th>
                                        <th>Final Price</th>
                                        <th>Sale Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstRegistration != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstRegistration)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.SalesOrderNo</td>
                                                    <td>@item.BillNo</td>
                                                    <td>@item.PieceName</td>
                                                    <td>@item.NoOfPiece</td>
                                                    <td>@item.OriginalPrice</td>
                                                    <td>@item.Discount</td>
                                                    <td>@item.FinalPrice</td>
                                                    <td>@item.SaleDate</td>
                                                   
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




