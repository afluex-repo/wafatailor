@model WafaTailor.Models.Master

@{
    ViewBag.Title = "ShopMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ShopMaster", "Master", FormMethod.Post, new { @Id = "form", @enctype = "multipart/Form-data" }))
{


    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class="pull-left">
                   
                    </div>
                  
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card card-box">
                        <div class="card-head">
                            <header>Shop Master</header>
                            <span class="text-danger">
                                @TempData["Shop"] @TempData["LoginId"] @TempData["Password"]  
                            </span>
                            <a href="/Master/ShopMasterList" class="btn btn-primary pull-right mr-10 mt-1 mb-1"><i class="fa fa-arrow-left"></i> Back to List</a>
                        </div>
                        <div class="card-body" id="bar-parent">
                            <div class="row">
                                <div class="form-group col-sm-4">
                                    <div class="form-group">
                                        <label for="simpleFormEmail">Shop Branch<span style="color:red">*</span></label>
                                        @Html.TextBoxFor(m => m.ShopName, new { @class = "form-control", @placeholder = "Shop Branch Name" })
                                    </div>
                                </div>
                                <div class="form-group col-sm-4">
                                    <div class="form-group">
                                        <label for="simpleFormPassword">Address <span style="color:red">*</span></label>
                                        @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @Placeholder = " Shop Address", })
                                    </div>
                                </div>
                                <div class="form-group col-sm-4 mt-5">
                                    <input type="submit" class="btn btn-primary" name="Save" value="Submit" onclick="return ValidateShop()">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script>
    function ValidateShop() {
        $("#divload").css({ 'display': '' })
        $(".errortext").removeClass("errortext");

        if ($("#ShopName").val() == "") {
            $("#ShopName").addClass('errortext');
            $("#ShopName").focus();
            return false;
        }

        if ($("#Address").val() == "") {
            $("#Address").addClass('errortext');
            $("#Address").focus();
            return false;
        }
    }
</script>




